<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="">
    <link rel="stylesheet" href="/css/login.css">
    <title>Formulário Cartão de Crédito/Débito</title>
</head>
<body>
    <%- include('partials/headerLog') %>
    <div class="containerF">

    <div class="payment-form">
        <h2>Pagamento</h2>
        <form id="payment-form">
            <div class="form-group">
                <label for="name">Nome no Cartão</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="card-number">Número do Cartão</label>
                <input type="text" id="card-number" name="card-number" required>
            </div>
            <div class="form-group">
                <label for="expiry-date">Data de Validade</label>
                <input type="text" id="expiry-date" name="expiry-date" placeholder="MM/AA" required>
            </div>
            <div class="form-group">
                <label for="cvv">Código de Segurança (CVV)</label>
                <input type="text" id="cvv" name="cvv" required>
            </div>
            <button type="submit" class="submit-btn">Pagar</button>

        </form>
        <button id="nextButton" class="hidden" > Avançar</button>
    </div>
</div>
    <%- include('partials/footer') %>
    <style>
        body {
    font-family: Arial, sans-serif;
    background-color:white ;
   
    height: 100vh;
    margin: 0;
}
.containerF{
    display: flex;
    justify-content: center;
    align-items: center;
}

.payment-form {
    background-color:#133579;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
    margin: 20px;
}



h2 {
    margin: 0;
    font-size: 45px;
    color: white;
    font-family:Arial, Helvetica, sans-serif;
   
}
.payment-form h2 {
    margin-bottom: 28px;
    text-align: center;
}

.form-group {
    margin-bottom: 15px;
}

.form-group label {
    display: block;
    margin-bottom: 5px;
    color:white;
}

.form-group input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}

.form-group input:focus {
    border-color: #007bff;
    outline: none;
}

.submit-btn {
    width: 100%;
    padding: 10px;
    background-color:green;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
}


.hidden{
    width: 30%;
    padding: 5px;
  margin-top: 18px;
    margin-left: 135px;
    background-color:white;
    color: black;
  text-align: center;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
}


@media (max-width: 600px) {
    .payment-form {
        width: 90%;
    }
}

    </style>
  <script>
    document.getElementById('payment-form').addEventListener('submit', function(event) {
    event.preventDefault();

    const name = document.getElementById('name').value;
    const cardNumber = document.getElementById('card-number').value;
    const expiryDate = document.getElementById('expiry-date').value;
    const cvv = document.getElementById('cvv').value;

    if (validateCardDetails(name, cardNumber, expiryDate, cvv)) {
        alert('Pagamento efetuado com sucesso!');
    } else {
        alert('Por favor, verifique os detalhes do cartão e tente novamente.');
    }
});

function validateCardDetails(name, cardNumber, expiryDate, cvv) {
    const cardNumberPattern = /^\d{16}$/;
    const expiryDatePattern = /^(0[1-9]|1[0-2])\/\d{2}$/;
    const cvvPattern = /^\d{3}$/;

    return (
        name.trim() !== '' &&
        cardNumberPattern.test(cardNumber) &&
        expiryDatePattern.test(expiryDate) &&
        cvvPattern.test(cvv)
    );
}
nextButton.addEventListener('click', () => {
        
    
    window.location.href = '/finalPagamento';
});

  </script>

 
    
</body>
</html>