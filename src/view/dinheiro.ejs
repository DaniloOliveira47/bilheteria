<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dinheiro</title>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <%- include('partials/headerLog') %>
    <div class="container">
        <h1>Pagamento com Boleto Bancário</h1>
        <form id="boletoForm">
            <div class="form-group">
                <label for="name">Nome Completo</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="cpf">CPF</label>
                <input type="text" id="cpf" name="cpf" required>
            </div>
            <div class="form-group">
                <label for="amount">Valor (R$)</label>
                <input type="number" id="amount" name="amount" required>
            </div>
            <button type="button" onclick="generateBoleto()">Gerar Boleto</button>
        </form>
        <div id="boletoContainer" class="boleto-container">
            
        </div>
        <button id="nextButton" class="hidden" >Avançar</button>
    </div>
</body>
    <%- include('partials/footer') %>
    <style>
body {
    font-family: Arial, sans-serif;
    
    
    align-items: center;
    height: 100vh;
    background-color: #f0f0f0;
    margin: 0;
}

.container {
    background-color:#133579;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    max-width: 400px;
    width: 100%;
}

h1 {
    margin-bottom: 20px;
    color:white;
}

.form-group {
    margin-bottom: 15px;
    text-align: left;
}

label {
    display: block;
    margin-bottom: 5px;
    color: white;
}

input {
    width: 100%;
    padding: 8px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
}

button {
    padding: 10px 15px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.hidden{
    width: 30%;
    padding: 5px;
  
    margin: 15px;
    background-color:white;
    color: black;
  text-align: center;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;

}

.hidden:hover{
    background-color: white;
}


button:hover {
    background-color: #45a049;
}

.boleto-container {
    margin-top: 20px;
    color: white;
}



@media (max-width: 768px) {
    .container {
        padding: 15px;
        max-width: 100%;
    }

    input, button {
        font-size: 14px;
    }

    h1 {
        font-size: 24px;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 10px;
    }

    h1 {
        font-size: 20px;
    }

    button, .hidden {
        width: 100%;
        font-size: 14px;
    }
}

    </style>

    <script>
        function generateBoleto() {
    const name = document.getElementById('name').value;
    const cpf = document.getElementById('cpf').value;
    const amount = document.getElementById('amount').value;

    if (!name || !cpf || !amount) {
        alert('Por favor, preencha todos os campos.');
        return;
    }

    
    const boletoContainer = document.getElementById('boletoContainer');
    boletoContainer.innerHTML = '';

    const boletoDetails = `
        <h2>Boleto Bancário</h2>
        <p><strong>Nome:</strong> ${name}</p>
        <p><strong>CPF:</strong> ${cpf}</p>
        <p><strong>Valor:</strong> R$ ${amount}</p>
        <p><strong>Linha Digitável:</strong> 12345.67890 12345.678901 12345.678901 1 23456789012345</p>
    `;

    boletoContainer.innerHTML = boletoDetails;

   
    const barcodeImg = document.createElement('img');
    barcodeImg.src = 'https://via.placeholder.com/350x70.png?text=Código+de+Barras';
    boletoContainer.appendChild(barcodeImg);
}

nextButton.addEventListener('click', () => {
        
    
    window.location.href = '/finalPagamento';
});



    </script>

</html>